{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "lib": ["esnext.array", "es2018"],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__"]
}
